@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de Usuario";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Criar" >Adicionar novo Usuario</a>
    </div>

    @if(TempData["MensagemSucesso"]!= null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="12">X</button>
        </div>        
    }
    @if(TempData["MensagemErro"]!= null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="12">X</button>
        </div>
    }

    <h1> Listagem de Usuários </h1>
    <table class="table" id="table-usuarios">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">E-mail</th>
                <th scope="col">Data de Cadasto</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null && Model.Any() && Model.Count != 0)
            {
                foreach(UsuarioModel user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.Nome</td>
                        <td>@user.Login</td>
                        <td>@user.Email</td>
                        <td>@user.DataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-warning" asp-route-id="@user.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@user.Id" asp-controller="Usuario" asp-action="Excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd">
                    <td valign="top" colspan="5">Nenhum Usuário encontrado</td>
                </tr>
            }   
        </tbody>
    </table>
</div>


